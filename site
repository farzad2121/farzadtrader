    <!-- JavaScript for the application -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tab switching functionality
            const tabs = document.querySelectorAll('.tab');
            const tabContents = document.querySelectorAll('.tab-content');
            
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    // Remove active class from all tabs
                    tabs.forEach(t => t.classList.remove('active'));
                    // Add active class to clicked tab
                    tab.classList.add('active');
                    
                    // Hide all tab contents
                    tabContents.forEach(content => content.classList.add('hidden'));
                    // Show the selected tab content
                    const tabId = 'tab-' + tab.dataset.tab;
                    document.getElementById(tabId).classList.remove('hidden');
                });
            });
            
            // Connect broker button functionality
            const connectButton = document.getElementById('connect-broker');
            const connectionStatus = document.getElementById('connection-status');
            
            connectButton.addEventListener('click', () => {
                const brokerName = document.getElementById('broker-name').value;
                const accountNumber = document.getElementById('account-number').value;
                const investorPassword = document.getElementById('investor-password').value;
                
                if (brokerName && accountNumber && investorPassword) {
                    // Simulate connection process
                    connectButton.textContent = 'در حال اتصال...';
                    connectButton.disabled = true;
                    
                    setTimeout(() => {
                        connectionStatus.classList.remove('bg-red-500');
                        connectionStatus.classList.add('bg-green-500');
                        connectionStatus.innerHTML = '<i class="fas fa-plug ml-2"></i><span>متصل</span>';
                        
                        connectButton.textContent = 'اتصال برقرار شد';
                        connectButton.classList.remove('bg-blue-600', 'hover:bg-blue-700');
                        connectButton.classList.add('bg-green-600', 'hover:bg-green-700');
                        
                        // Show alert
                        alert('اتصال به بروکر با موفقیت برقرار شد. داده‌های معاملاتی در حال بارگذاری است.');
                        
                        // Enable button after a delay
                        setTimeout(() => {
                            connectButton.textContent = 'اتصال به بروکر';
                            connectButton.classList.remove('bg-green-600', 'hover:bg-green-700');
                            connectButton.classList.add('bg-blue-600', 'hover:bg-blue-700');
                            connectButton.disabled = false;
                        }, 5000);
                    }, 2000);
                } else {
                    alert('لطفاً تمام اطلاعات مورد نیاز را وارد کنید.');
                }
            });
            
            // Add Trade Modal functionality
            const addTradeBtn = document.getElementById('add-manual-trade');
            const addTradeModal = document.getElementById('add-trade-modal');
            const closeAddTradeBtn = document.getElementById('close-add-trade-modal');
            const cancelAddTradeBtn = document.getElementById('cancel-add-trade');
            
            addTradeBtn.addEventListener('click', () => {
                addTradeModal.classList.remove('hidden');
            });
            
            closeAddTradeBtn.addEventListener('click', () => {
                addTradeModal.classList.add('hidden');
            });
            
            cancelAddTradeBtn.addEventListener('click', () => {
                addTradeModal.classList.add('hidden');
            });
            
            // Add Screenshot functionality
            const addScreenshotCheckbox = document.getElementById('add-screenshot');
            const screenshotUpload = document.getElementById('screenshot-upload');
            const browseScreenshotBtn = document.getElementById('browse-screenshot');
            const screenshotInput = document.getElementById('screenshot-input');
            
            addScreenshotCheckbox.addEventListener('change', () => {
                if (addScreenshotCheckbox.checked) {
                    screenshotUpload.classList.remove('hidden');
                } else {
                    screenshotUpload.classList.add('hidden');
                }
            });
            
            browseScreenshotBtn.addEventListener('click', () => {
                screenshotInput.click();
            });
            
            // Initialize charts
            function initCharts() {
                // Profit Chart
                const profitChartCtx = document.getElementById('profit-chart').getContext('2d');
                const profitChart = new Chart(profitChartCtx, {
                    type: 'line',
                    data: {
                        labels: ['فروردین', 'اردیبهشت', 'خرداد', 'تیر', 'مرداد', 'شهریور'],
                        datasets: [{
                            label: 'سود/ضرر',
                            data: [250, 520, 380, 720, 450, 680],
                            backgroundColor: 'rgba(59, 130, 246, 0.1)',
                            borderColor: 'rgba(59, 130, 246, 1)',
                            borderWidth: 2,
                            tension: 0.4,
                            fill: true
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
                
                // Time Chart
                const timeChartCtx = document.getElementById('time-chart').getContext('2d');
                const timeChart = new Chart(timeChartCtx, {
                    type: 'bar',
                    data: {
                        labels: ['8-10', '10-12', '12-14', '14-16', '16-18', '18-20', '20-22'],
                        datasets: [{
                            label: 'سود ($)',
                            data: [45, 85, 35, 65, 40, 25, -30],
                            backgroundColor: function(context) {
                                const value = context.dataset.data[context.dataIndex];
                                return value < 0 ? 'rgba(239, 68, 68, 0.7)' : 'rgba(16, 185, 129, 0.7)';
                            }
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
                
                // Currency Chart
                const currencyChartCtx = document.getElementById('currency-chart').getContext('2d');
                const currencyChart = new Chart(currencyChartCtx, {
                    type: 'pie',
                    data: {
                        labels: ['EUR/USD', 'GBP/JPY', 'USD/JPY', 'AUD/USD', 'EUR/GBP', 'سایر'],
                        datasets: [{
                            data: [35, 25, 15, 10, 8, 7],
                            backgroundColor: [
                                'rgba(59, 130, 246, 0.7)',
                                'rgba(16, 185, 129, 0.7)',
                                'rgba(245, 158, 11, 0.7)',
                                'rgba(139, 92, 246, 0.7)',
                                'rgba(236, 72, 153, 0.7)',
                                'rgba(107, 114, 128, 0.7)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false
                    }
                });
                
                // Strategy Chart
                const strategyChartCtx = document.getElementById('strategy-chart').getContext('2d');
                const strategyChart = new Chart(strategyChartCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['شکست خط روند', 'واگرایی RSI', 'حمایت/مقاومت', 'الگوی هارمونیک', 'میانگین متحرک', 'سایر'],
                        datasets: [{
                            data: [30, 22, 18, 12, 10, 8],
                            backgroundColor: [
                                'rgba(59, 130, 246, 0.7)',
                                'rgba(16, 185, 129, 0.7)',
                                'rgba(245, 158, 11, 0.7)',
                                'rgba(139, 92, 246, 0.7)',
                                'rgba(236, 72, 153, 0.7)',
                                'rgba(107, 114, 128, 0.7)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false
                    }
                });
                
                // Best Hours Chart
                if (document.getElementById('best-hours-chart')) {
                    const bestHoursChartCtx = document.getElementById('best-hours-chart').getContext('2d');
                    const bestHoursChart = new Chart(bestHoursChartCtx, {
                        type: 'bar',
                        data: {
                            labels: ['8-10', '10-12', '12-14', '14-16', '16-18', '18-20', '20-22'],
                            datasets: [{
                                label: 'نرخ موفقیت (%)',
                                data: [58, 76, 62, 72, 55, 42, 35],
                                backgroundColor: function(context) {
                                    const value = context.dataset.data[context.dataIndex];
                                    return value > 65 ? 'rgba(16, 185, 129, 0.7)' : 
                                           value > 50 ? 'rgba(245, 158, 11, 0.7)' : 'rgba(239, 68, 68, 0.7)';
                                }
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    max: 100
                                }
                            }
                        }
                    });
                }
                
